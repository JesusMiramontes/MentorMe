<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @review.title %>
</p>

<p>
  <strong>Score:</strong>
  <%= @review.score %>
</p>

<p>
  <strong>Description:</strong>
  <%= @review.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @review.user %>
</p>

<p>
  <strong>Professor:</strong>
  <%= @review.professor %>
</p>

<% if user_signed_in? %>
  <% if current_user.is_admin? %>
    <%= link_to 'Edit', edit_review_path(@review) %> |
    <%= link_to 'Back', reviews_path %>
  <% end %>
<% end %>
